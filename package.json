{
  "name": "markdown-runner",
  "displayName": "Markdown Code Block Runner",
  "description": "Enables the seamless execution of code blocks in any language within Markdown files in VS Code",
  "publisher": "renathossain",
  "icon": "Icon.png",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/renathossain/vscode-markdown-runner.git"
  },
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Markdown Code Block Runner",
      "properties": {
        "markdownRunner.compilerConfiguration": {
          "type": "object",
          "description": "Configure language compilers by specifying Item: `Code Block Tag` and associated Value: `[Language Name, File Extension, Compiler Command/Path]`. Only non-compiled languages can be added.",
          "default": {
            "python": "[\"Python\", \"py\", \"python\"]",
            "c": "[\"C\", \"c\", \"gcc\"]",
            "java": "[\"Java\", \"java\", \"javac\"]",
            "cpp": "[\"C++\", \"cpp\", \"g++\"]",
            "rust": "[\"Rust\", \"rs\", \"rustc\"]",
            "typescript": "[\"TypeScript\", \"ts\", \"npx ts-node\"]",
            "php": "[\"PHP\", \"php\", \"php\"]",
            "perl": "[\"Perl\", \"pl\", \"perl\"]",
            "r": "[\"R\", \"r\", \"Rscript\"]",
            "dart": "[\"Dart\", \"dart\", \"dart\"]",
            "groovy": "[\"Groovy\", \"groovy\", \"groovy\"]",
            "go": "[\"Go\", \"go\", \"go run\"]",
            "haskell": "[\"Haskell\", \"hs\", \"runhaskell\"]",
            "julia": "[\"Julia\", \"jl\", \"julia\"]",
            "lua": "[\"Lua\", \"lua\", \"lua\"]",
            "ruby": "[\"Ruby\", \"rb\", \"ruby\"]",
            "javascript": "[\"JavaScript\", \"js\", \"node\"]",
            "bash": "[\"Bash\", \"sh\", \"bash\"]"
          },
          "additionalProperties": {
            "type": "string"
          }
        },
        "markdownRunner.pythonPath": {
          "type": "boolean",
          "description": "Enable this to add the Markdown file's parent directory to Python's `sys.path`, allowing you to import modules from that directory.",
          "default": true
        }
      }
    }
  },
  "scripts": {
    "build": "vsce package",
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@eslint/markdown": "^6.3.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.1",
    "@vscode/vsce": "^3.3.2",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "webpack": "^5.99.5",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/async-lock": "^1.4.2",
    "async-lock": "^1.4.1",
    "tree-kill": "^1.2.2"
  }
}
